<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <LinearLayout
        android:id="@+id/setting_home_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_standard"
                app:srcCompat="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <Button
                    style="@style/Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_facebook"
                    android:onClick="ClickFacebook"/>

                <Button
                    style="@style/Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_messenger"
                    android:onClick="ClickMessenger"/>

               <!--<Button
                    style="@style/AppTheme.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="YouTube" />-->
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            style="@style/AppTheme.TitleBig"/>

        <ImageView
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_separator"
            app:srcCompat="@color/colorPrimary" />

        <!--<TextView
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oceny:"
            style="@style/AppTheme.Title"
            android:textSize="15dp"/>

        <ImageView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/colorPrimary" />-->

        <CheckBox
            android:id="@+id/average_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/length_minimal"
            android:text="@string/title_average_weight"/>

        <CheckBox
            android:id="@+id/setting_average_to_assessment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/length_minimal"
            android:text="@string/title_average_to_assessment"
            android:onClick="ClickCheckAverageToAssessment"/>

        <TableLayout
            android:id="@+id/setting_average_to_assessment_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginLeft="@dimen/margin_standard">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_average_to_six" />

                <EditText
                    android:id="@+id/setting_average_to_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/length_minimal"
                    android:hint="@string/setting_to_six"
                    android:inputType="numberDecimal"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_average_to_five" />

                <EditText
                    android:id="@+id/setting_average_to_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/length_minimal"
                    android:hint="@string/setting_to_five"
                    android:inputType="numberDecimal"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_average_to_four" />

                <EditText
                    android:id="@+id/setting_average_to_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/length_minimal"
                    android:hint="@string/setting_to_four"
                    android:inputType="numberDecimal"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_average_to_three" />

                <EditText
                    android:id="@+id/setting_average_to_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/length_minimal"
                    android:hint="@string/setting_to_three"
                    android:inputType="numberDecimal"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_average_to_two" />

                <EditText
                    android:id="@+id/setting_average_to_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/length_minimal"
                    android:hint="@string/setting_to_two"
                    android:inputType="numberDecimal"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginLeft="@dimen/margin_standard">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_average_to_belt"/>

            <EditText
                android:id="@+id/setting_average_to_belt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/length_minimal"
                android:hint="@string/setting_to_belt"
                android:inputType="numberDecimal"/>
        </LinearLayout>

       <!-- <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/setting_end_day"
                android:layout_weight="1"/>

            <TimePicker
                android:id="@+id/setting_end_day"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:timePickerMode="spinner"
                android:layout_weight="1"/>
        </LinearLayout>-->

        <TextView
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_delete"
            style="@style/AppTheme.TitleBig"/>

        <ImageView
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_separator"
            app:srcCompat="@color/colorPrimary" />

        <Button
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_lesson_plan"
            android:onClick="ClickDestroyAllPlanLesson"
            style="@style/Button"/>

       <!-- <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin"
            android:text="@string/setting_delete_all_assessments"
            android:onClick="ClickDestroyAllAssessments"
            style="@style/AppTheme.Button"/>-->

        <Button
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_notes"
            android:onClick="ClickDestroyAllNotes"
            style="@style/Button"/>

        <Button
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_subjects"
            android:onClick="ClickDestroyAllSubjects"
            style="@style/Button"/>

        <ImageView
            android:layout_margin="@dimen/margin_standard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_separator"
            app:srcCompat="@color/colorPrimary" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_card"
            android:layout_margin="@dimen/margin_card"
            app:cardCornerRadius="@dimen/corner_radius_card"
            app:cardBackgroundColor="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="Dziennik Ucznia v0.6.7.3"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <Button
                    style="@style/AppTheme.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_facebook"
                    android:onClick="ClickFacebook"/>

               <!--<Button
                    style="@style/AppTheme.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="YouTube" />-->
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            style="@style/AppTheme.Title"/>

        <ImageView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/colorPrimary" />

        <CheckBox
            android:id="@+id/setting_average_to_assessment"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_average_to_assessment"
            android:onClick="ClickCheckAverageToAssessment"/>

        <TableLayout
            android:id="@+id/setting_average_to_assessment_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_six_from" />

                <EditText
                    android:id="@+id/setting_average_to_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/setting_to_six"
                    android:inputType="numberDecimal"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_five_from" />

                <EditText
                    android:id="@+id/setting_average_to_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/setting_to_five"
                    android:inputType="numberDecimal"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_four_from" />

                <EditText
                    android:id="@+id/setting_average_to_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/setting_to_four"
                    android:inputType="numberDecimal"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_three_from" />

                <EditText
                    android:id="@+id/setting_average_to_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/setting_to_three"
                    android:inputType="numberDecimal"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_two_from" />

                <EditText
                    android:id="@+id/setting_average_to_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/setting_to_two"
                    android:inputType="numberDecimal"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_belt_from"/>

            <EditText
                android:id="@+id/setting_average_to_belt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/setting_to_belt"
                android:inputType="numberDecimal"/>
        </LinearLayout>

       <!-- <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/setting_end_day"
                android:layout_weight="1"/>

            <TimePicker
                android:id="@+id/setting_end_day"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:timePickerMode="spinner"
                android:layout_weight="1"/>
        </LinearLayout>-->

        <Button
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_delete_all_subjects"
            android:onClick="ClickDestroyAllSubjects"
            style="@style/AppTheme.Button"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:theme="@style/AppTheme.Button"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Dziennik Ucznia v0.2"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
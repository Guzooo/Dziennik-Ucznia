<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false" />

    <android.support.v7.widget.CardView
        android:id="@+id/main_subject_null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:minHeight="@dimen/card_height"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/main_null_subject" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/main_notepad_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:minHeight="@dimen/card_height"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/main_notepad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/minimum_length"
            android:layout_gravity="center"
            android:hint="@string/notepad"
            android:inputType="textMultiLine"
            android:maxHeight="100dp" /><!--TODO: programowo 50%-->
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/main_bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            style="@style/AppTheme.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="ClickSetting"
            android:src="@drawable/ic_settings_applications_black_24dp" />

        <ImageButton
            style="@style/AppTheme.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="ClickPlan"
            android:src="@android:drawable/ic_dialog_dialer" />

        <ImageButton
            style="@style/AppTheme.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="ClickPlus"
            android:src="@android:drawable/ic_input_add" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
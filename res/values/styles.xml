<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryG">@color/light</item>
        <item name="colorPrimaryDarkG">@color/lightDark</item>
        <item name="colorPrimaryTranslucentG">@color/lightTranslucent</item>
        <item name="colorSecondaryG">@color/dark</item>
        <item name="colorSecondaryDarkG">@color/darkDark</item>
        <item name="colorAccentG">@color/accent3</item>

        <item name="colorPrimary">?attr/colorPrimaryTranslucentG</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryTranslucentG</item>
        <item name="colorAccent">?attr/colorAccentG</item>

        <item name="android:textViewStyle">@style/TextNormal</item>
        <item name="android:colorBackground">?attr/colorPrimaryG</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryTranslucentG</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Logo">
        <item name="android:layout_width">@dimen/length_logo</item>
        <item name="android:layout_height">@dimen/length_logo</item>
    </style>

    <style name="AllClickable">
        <item name="android:minWidth">@dimen/length_minimal</item>
        <item name="android:minHeight">@dimen/length_minimal</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="ClickableImages" parent="AllClickable">
        <item name="android:layout_width">@dimen/length_minimal</item>
        <item name="android:layout_height">@dimen/length_minimal</item>
        <item name="android:padding">@dimen/padding_clickable_image</item>
        <item name="android:tint">?attr/colorAccentG</item>
    </style>

    <style name="ClickableImages.G">
        <item name="android:tint">@color/gWhite</item>
    </style>

    <style name="TextNormal">
        <item name="android:textColor">?attr/colorSecondaryG</item>
        <item name="android:textSize">@dimen/size_text_normal</item>
    </style>

    <style name="TextNormal.G">
        <item name="android:textColor">@color/gWhite</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/size_text_title</item>
    </style>

    <style name="TextTitle.G">
        <item name="android:textColor">@color/gWhite</item>
    </style>

    <style name="TextBold">
        <item name="android:textSize">@dimen/size_text_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLittle"><!--//TODO: kill-->
        <item name="android:textColor">?attr/colorPrimaryDarkG</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="AppTheme.TitleBig" parent="AppTheme.Title"><!--//TODO: kill-->
        <item name="android:textSize">20dp</item>
    </style>

    <style name="AppTheme.Title" parent="AppTheme"><!--//TODO: kill-->
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Button"><!--//TODO: może zostawić-->
        <item name="android:textColor">?attr/colorAccentG</item>
        <item name="android:backgroundTint">?attr/colorPrimaryDarkG</item>
        <item name="android:tint">?attr/colorAccentG</item>
    </style>

    <!--<style name="Button" parent="AppTheme">
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>-->

    <style name="CardViewStandard">
        <item name="android:minHeight">@dimen/height_card</item>
        <item name="android:layout_margin">@dimen/margin_card</item>
        <item name="cardCornerRadius">@dimen/corner_radius_card</item>
        <item name="android:backgroundTint">?attr/colorPrimaryG</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">?attr/colorPrimaryTranslucentG</item>
        <item name="itemIconTint">@color/checked_state</item>
        <item name="itemTextColor">@color/checked_state</item>
        <item name="rippleColor">?attr/colorPrimaryDarkG</item>
    </style>

    <style name="FAB">
        <item name="android:tint">?attr/colorAccentG</item>
        <item name="android:backgroundTint">?attr/colorPrimaryG</item>
        <item name="rippleColor">?attr/colorPrimaryDarkG</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="PillButton">
        <item name="android:textColor">@color/pill_text_state</item>
        <item name="android:background">@drawable/pill</item>
        <item name="android:backgroundTint">@color/pill_background_state</item>
    </style>
</resources>
